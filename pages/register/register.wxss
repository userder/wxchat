/* pages/register/register.wxss */
.wrapper{
  font-size: 13pt;
  position: relative;
}
.loginCont{
  width: 100%;
  box-sizing: border-box;
  padding: 0 8%;
  position: fixed;
  top: 16%;
  left: 0;
}
.loginCont input{
  width: 100%;
  padding: 0 10rpx;
  box-sizing: border-box;
}
.loginCont .code{
  justify-content: space-between;
}
.loginCont .code input{
  width: 10em;
}
.loginCont .code text{
  color: #3573FA;
  font-size: 12pt;
}
.int{
  border-bottom: 1px solid #efefef;
  padding: 12px 0;
  margin-bottom: 10px;
  color: #666;
}
.login{
  text-align: center;
  line-height: 44px;
  height: 44px;
  width: 100%;
  background: #3573FA;
  color: rgba(255, 255, 255, 0.9);
  border-radius: 30px;
  box-shadow: 0 6px 20px #CCDBFE;
  margin-top: 50px;
  transition: all 0.2s;
}
.login.load{
  width: 44px;
  height: 44px;
  border-radius: 50%;
  transition: all 0.2s;
}
.pla_style{
  color: #949494;
  font-size: 12pt;
}
.register{
  width: 100%;
  font-size: 11pt;
  color: #3573FA;
  text-align: center;
  position: fixed;
  bottom: 30px;
  left: 0;
}