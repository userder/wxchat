/* pages/login/login.wxss */
.wrapper{
  font-size: 13pt;
}
.loginCont{
  width: 100%;
  box-sizing: border-box;
  padding: 0 8%;
  position: fixed;
  top: 20%;
  left: 0;
}
.int{
  border-bottom: 1px solid #efefef;
  padding: 12px 0;
  margin-bottom: 10px;
  color: #353535;
}
.login{
  text-align: center;
  height: 44px;
  width: 100%;
  line-height: 44px;
  background: #3573FA;
  color: rgba(255, 255, 255, 0.9);
  border-radius: 30px;
  box-shadow: 0 6px 20px #CCDBFE;
  margin-top: 50px;
  transition: all 0.2s;
}
.login.load{
  width: 44px;
  height: 44px;
  border-radius: 50%;
}
.pla_style{
  color: #949494;
  font-size: 12pt;
}
.register{
  width: 100%;
  font-size: 11pt;
  color: #3573FA;
  text-align: center;
  position: fixed;
  bottom: 30px;
  left: 0;
}