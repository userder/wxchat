page{
  background: #F9F9F9;
}
.wrapper{
  margin-top: 14rpx;
  background: #fff;
}
.wrapper:first-of-type{
  margin-top: 0;
}
.title{
  font-size: 14pt;
  font-weight: bold;
  padding: 12px;
  border-bottom: 1px solid #efefef;
}
.detail{
  padding: 0 18px;
  padding-right: 0;
  font-size: 11pt;
  color: #666;
}
.list{
  padding: 12px 0;
  border-bottom: 1px solid #efefef;
}
.list:last-of-type{
  border: none
}
.name{
  color: #898989;
  width: 10em;
  margin-right: 4%;
}